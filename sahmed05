	function appetizers() {
	  storm = document.getElementById("apple")
	  storm.innerHTML=''
	  storm.innerHTML += appetizersDivs[0]
	  storm.innerHTML += appetizersDivs[1]
	  storm.innerHTML += appetizersDivs[2]
	  storm.innerHTML += appetizersDivs[3]
	  storm.innerHTML += appetizersDivs[4]
	  //alert("you have picked appetizers")
	  items = document.getElementsByClassName("item")
	  items[0].style.background = appetizersImages[0]
	  items[0].style.backgroundSize = '100% 100%'
	  items[1].style.background = appetizersImages[1]
	  items[1].style.backgroundSize = '100% 100%'
	  items[2].style.background = appetizersImages[2]
	  items[2].style.backgroundSize = '100% 100%'
	  items[3].style.background = appetizersImages[3]
	  items[3].style.backgroundSize = '100% 100%'
	  items[4].style.background = appetizersImages[4]
	  items[4].style.backgroundSize = '100% 100%'
	}
